<div class="page-title">
    <div class="row justify-content-between align-items-center">
        <div class="col-md-6 mb-3 mb-md-0">
            <h5 class="h3 font-weight-400 mb-0 text-white">Project Wise Task</h5>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12 col-md-6">
        <div class="card card-fluid">
            <div class="card-header">
                <h6 class="mb-0">Project Wise Task List</h6>
            </div>
            <div class="card-body">
                <!-- Chart -->
                <div class="table-responsive">
                    <table id="invoices-list" class="table table-white-space table-bordered row-grouping display no-wrap icheck table-middle">
                        <thead>
                            <tr>
                                <th><input type="checkbox" class="input-chk-all"></th>
                                <th>Task</th>
                                <th>Project Name</th>
                                <th>Details</th>
                                <th>Created Date</th>


                            </tr>
                        </thead>
                        <tbody>


                            @{ int i = 1; foreach (var item in Model)
                             {

                                <tr>
                                    <td><input type="checkbox" class="input-chk"></td>
                                    <td>
                                        @if (item.PWT_ParentTaskCount > 0)
                                        {
                                            <a href="TaskList?ProjectId=@item.PWT_ProjectId&Id=@item.PWT_Id" class="text-bold-600">@item.PWT_TaskTitle </a>
                                        }
                                        else
                                        {
                                            <a href="TaskDetails?Id=@item.PWT_ProjectId&TaskId=@item.PWT_Id" class="text-bold-600">@item.PWT_TaskTitle </a>
                                        }

                                    </td>
                                    <td>
                                        <span class="badge badge-success badge-md"> @item.PE_ProjectName</span>

                                    </td>

                                    <td><p class="text-muted text-bold-600">@item.PWT_Description</p></td>



                                    <td>
                                        <span class="badge badge-info badge-md"> @item.PWT_CreatedDate</span>


                                    </td>

                                </tr>
                             }
                            }
                        </tbody>


                    </table>
                </div>

            </div>
        </div>
    </div>

</div>




