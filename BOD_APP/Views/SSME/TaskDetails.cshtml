
@{
    ViewBag.Title = "TaskDetails";
    //Layout = "~/Views/Shared/_DataTableLayout.cshtml";
    Layout = "~/Views/Shared/_LayoutNewTemp.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/app-assets/css/pages/support-ticket-detail.css">

  <div class="page-content">
        <div class="row">

            <div class="col-lg-4 order-lg-2">
                <div class="card">
                    <div class="card-header border-bottom border-light">
                        <h6 class="mb-4" id="hHeader"></h6>
                    </div>
                    <div class="card-body activated">
                        <a id="btnAddTask" href="/Project/ProjectWiseTask?Id=@ViewBag.Id&TaskId=@ViewBag.TaskId" class="btn btn-success btn-icon btn-sm btn-block">
                            <i class="la la-check-circle"></i>Add Task
                        </a>
                        @if (Convert.ToInt32(ViewBag.IsSub) > 0)
                        {
                            <a href="/SSME/TaskList?ProjectId=@ViewBag.Id&Id=@ViewBag.TaskId" class="btn btn-primary btn-icon btn-sm btn-block">
                                <i class="la la-tasks"></i>Sub Activity List
                            </a>

                        }


                        <div class="form-group mt-1">
                            <select name="Status" id="status" class="form-control" onchange="UpdateStatus()">
                                <option value="Open">Status: Open</option>
                                <option value="WorkInProgress">Status: Work In Progress</option>
                                <option value="ClosedCompleted">Status: Closed Completed</option>
                                <option value="ClosedInCompleted">Status: Closed InCompleted</option>
                            </select>

                        </div>
                        <div class="form-group mt-1" id="prority">


                        </div>
                        <div class="form-group mt-1">
                            <div class="badge badge-danger badge-square">
                                <i class="la la-calendar font-medium-2"></i>
                                <span id="strtdate"></span>
                            </div>
                        </div>
                        <div class="form-group mt-1">
                            <div class="badge badge-success badge-square">
                                <i class="la la-calendar font-medium-2"></i>
                                <span id="endddate"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <ul class="list-unstyled">
                            <li>

                                <h4>Project Owner</h4>
                            </li>
                            <li>
                                
                                <i class="ft-user font-small-3"></i> <span id="spnCorp"></span>
                            </li>

                            <li>
                                
                                <i class="la la-filter text-info font-small-3"></i> <span id="spnEmail"></span>
                            </li>
                            <li>
                                
                                <i class="la la-phone text-warning font-small-3"></i><span id="spnPhNo"></span>
                            </li>
                            <li>
                                
                                <i class="la la-calendar font-small-3"></i> <span id="spnCreatedDate"></span>
                            </li>

                        </ul>
                    </div>

                </div>
            </div>


            <div class="col-lg-8 order-lg-1">
                <div class="card bg-gradient-warning hover-shadow-lg border-0">
                    <div class="card-body py-3">
                        <div class="row row-grid align-items-center">
                            <div class="col-lg-8">
                                <div class="media align-items-center">
                                    <h5 class="text-white mb-0" id="tasktticket">
                                        <i class="ft-lock"></i>
                                    </h5>

                                </div>
                                <div class="media-body">
                                    <h6 id="tasktitle" class="text-white mb-0"> <a href="#"></a></h6>

                                    <p id="taskdetails" class="text-white mb-0"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                    <div class="card">
                        <div class="card-body">

                            <div class="row">
                                <div class="col-md-12">

                                    <div class="form-group">
                                        <label class="form-control-label" for="projectinput1">Work Note</label>
                                        <span style="color: red">*</span>
                                        <input type="hidden" name="filestring" id="filestring" />
                                        <textarea class="form-control" name="comment" id="comment" placeholder="Comment" rows="3"></textarea>
                                    </div>
                                </div>

                            </div>

                            <div class="row">


                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-control-label" for="projectinput1">Upload File</label>
                                        <input type="file" name="file-1[]" id="file-1" class="custom-input-file" data-multiple-caption="{count} files selected" multiple onchange="encodeImgtoBase64(this)" />
                                        <label for="file-1">
                                            <i class="fa fa-upload"></i>
                                            <span>Choose a file…</span>
                                        </label>
                                    </div>
                                </div>

                                

                            </div>
                            <div class="text-right">

                                <button id="btnSubmit" type="button" class="btn btn-sm btn-primary rounded-pill" onclick="SaveRecords()" ;>Post a comment</button>
                            </div>

                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <div class="media-list media-bordered" id="commentsection">



                            </div>

                        </div>
                    </div>


            </div>
        </div>
    </div>

<script src="~/Content/app-assets/js/scripts/ui/breadcrumbs-with-stats.js"></script>

<script src="~/Scripts/custom/ProjectWiseTaskComment.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


