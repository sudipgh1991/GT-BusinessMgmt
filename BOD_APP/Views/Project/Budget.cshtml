<div class="content-detached" style="display:none">
    <div class="content-body">
        <section class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="col-lg-4 col-md-12">
                            <div class="form-group">
                                <h5>Year <span class="required">*</span></h5>
                                <div class="controls">
