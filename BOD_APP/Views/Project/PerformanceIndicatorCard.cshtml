                        <img alt="Image placeholder" src="@a.PE_Image" class="avatar  rounded-circle">
                        <span class="avatar-child avatar-badge bg-info"></span>
                    </div>
                    <div class="avatar-content ml-3">
                        <h6 class="mb-0">@a.PE_ProjectName</h6>
                        <span class="text-sm text-muted"><i class="fa fa-calendar mr-2"></i>@a.PE_CardStartDate</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
