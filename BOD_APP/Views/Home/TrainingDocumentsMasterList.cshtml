@model IList<BOD_DAL.Models.TrainingDocumentsMaster>
@{
    ViewBag.Title = "TrainingDocumentsMasterList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@Styles.Render("~/datatable/css")
<!-- HTML5 export buttons table -->
<section id="html5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Training Documents List</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <button id="btnGo" class="btn btn-primary btn-sm"><i class="ft-plus white"></i> Add Training Documents</button>

                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered dataex-html5-export ">
                                <thead>
                                    <tr>
                                        <th width="40%">Title</th>
                                        @*<th width="40%">Documents</th>*@
                                        <th>Edit</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 1; foreach (var item in Model)
                                        {
                                            <tr>
                                                <td width="40%">@item.Title</td>
                                                @*<td width="40%">@item.Documents</td>*@
                                                <td><a href="TrainingDocumentsMaster?Id=@item.Id"><i class="ft-edit-1"></i></a></td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@Scripts.Render("~/bundles/dtjquery")
<!--/ HTML5 export buttons table -->
<script>
    $(document).ready(function () {
        $("#btnGo").click(function () {
            window.location.href = 'TrainingDocumentsMaster';
        });
    });

</script>
