
@{
    ViewBag.Title = "EmployeeLeaveSetting";
    Layout = "~/Views/Shared/_LayoutNewTemp.cshtml";
}





<div class="page-content">
    <!-- Page title -->
    <div class="page-title">
        <div class="row justify-content-between align-items-center">
            <div class="col-md-6 d-flex align-items-center justify-content-between justify-content-md-start mb-3 mb-md-0">
                <!-- Page title + Go Back button -->
                <div class="d-inline-block">
                    <h5 class="h4 d-inline-block font-weight-400 mb-0 text-white">Leave Setting</h5>
                </div>
                <!-- Additional info -->
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-between justify-content-md-end">
            </div>
        </div>
    </div>
    <div class="row">
        @{
            Html.RenderPartial("_ParEmpDetails");
        }
        <div class="col-lg-8 order-lg-1">
            <!-- Change avatar -->
            @{
                Html.RenderPartial("_ParEmpProfile");
            }
            <form id="frmEmpLeaveSetting">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Employee Leave Setting</h4>
                        <!-- General information -->
                        <div class="row">
                            <div class="col-md-10">
                                <input type="hidden" id="hdnId" />
                                <input type="hidden" id="hdnUserId" />
                                <input type="hidden" id="txtReason" />
                                <input type="hidden" id="txtDDate" />

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">

                                <div class="form-group">
                                    <label class="form-control-label" for="projectinput1">Date From</label>
                                    <input class="form-control datepicker" type="text" id="txtFrom" placeholder="mm/dd/yyyy" autocomplete="off">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="projectinput1">Date To</label>
                                    <input class="form-control datepicker" type="text" id="txtTo" placeholder="mm/dd/yyyy" autocomplete="off">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="projectinput1">Week Leave</label>
                                    <select class="select2-placeholder-multiple form-control" multiple="multiple" id="ddlWeekL" name="ddlWeekL"></select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="projectinput1">EL</label>
                                    <input class="form-control" type="text" id="txtEL" onkeyup="Calculate();" placeholder="Enter EL Number">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="projectinput1">CL</label>
                                    <input class="form-control" type="text" id="txtCL" onkeyup="Calculate();" placeholder="Enter CL Number">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="projectinput1">Medical</label>
                                    <input class="form-control" type="text" id="txtMedical" onkeyup="Calculate();" placeholder="Enter Medical Leave Number">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label" for="projectinput1">Total Leave</label>
                                    <input class="form-control" type="text" id="txtLeave" disabled>
                                </div>
                            </div>
                           
                        </div>
                     
                    </div>
                    <div class="text-right">
                        <a href="/Home/EmployeeLeave" class="btn btn-link text-sm text-muted font-weight-bold">Cancel</a>
                        <button type="button" class="btn btn-sm btn-primary rounded-pill" id="btnSubmit" onclick="SaveRecord()">Submit</button>
                    </div>
                </div>
                @*<div class="card">
                    <div class="card-body">

                        <div class="text-right">
                            <a href="/Home/EmployeeLeave" class="btn btn-link text-sm text-muted font-weight-bold">Cancel</a>
                            <button type="button" class="btn btn-sm btn-primary rounded-pill" id="btnSubmit" onclick="SaveRecord()">Submit</button>
                        </div>

                    </div>
                </div>*@
            </form>

        </div>
    </div>
</div>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Content/app-assets/js/scripts/forms/select/form-select2.js"></script>
<script src="~/Content/app-assets/js/scripts/forms/checkbox-radio.js"></script>
<script src="~/Scripts/custom/CommonEmpDetails.js"></script>

