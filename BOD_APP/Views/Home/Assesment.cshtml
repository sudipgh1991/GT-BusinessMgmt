    <script src="~/Content/app-assets/js/scripts/forms/wizard-steps.js"></script>
    <script src="~/Content/app-assets/js/scripts/forms/checkbox-radio.js"></script>

    <script src="~/Content/app-assets/js/scripts/forms/custom-file-input.min.js"></script>
</body>
<!-- END: Body-->
</html>